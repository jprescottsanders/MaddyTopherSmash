
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html lang="en">
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
	<title>Maddy &amp; Topher Smash</title>
	<link rel="stylesheet" href="css/style.css" type="text/css" media="screen">
	<script src="scripts/raphael.js" type="text/javascript" charset="utf-8"></script>
	<script src="scripts/helvetica.js" type="text/javascript" charset="utf-8"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.js"></script>
	<style type="text/css" media="screen">
	#keycatcher {
		position: absolute;
		top: -9999em;
		left: -9999em;
	}
	p {
		text-align: center;
	}
	</style>
	<script type="text/javascript" charset="utf-8">
	// <!-- abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789-=_+[]{}\|;':",./<>?`~!@#$%^&*() -->
	var r, w, h;

	$(document).ready(function () {
		r = Raphael("holder");
		w = $(document).width();
		h = $(document).height();
		//var letter = r.path("M10,20L30,40").attr({fill: "#fff", stroke: "#fff", "fill-opacity": .3, "stroke-width": 1, "stroke-linecap": "round", translation: "100 100"});

		$("#keycatcher").keyup(function (e) {
			var key = this.value.substring(this.value.length - 1);
			this.value = "";
			$("#copy").html(key)
			if (key && key in helvetica) {
				//letter.animate({path: helvetica[key]}, 600);
				var p =r.path(helvetica[key]).attr({fill: '#'+Math.floor(Math.random()*16777215).toString(16), stroke: '#'+Math.floor(Math.random()*16777215).toString(16), "fill-opacity": .3, "stroke-width": 1, "stroke-linecap": "round"});
				p.translate(Math.floor(Math.random() * w),Math.floor(Math.random() * h));
			}
			return false;
		});

		$("#keycatcher").blur(function () {
			$("#keycatcher").focus();
		});

		$("#keycatcher").focus();
		//$("#copy").html(w +":"+h)
	});
	</script>
</head>
<body>
	<p>SMASH!</p>
	<input type="text" value="" id="keycatcher">
	<div id="holder"></div>
	<p id="copy">Maddy &amp; Topher Smash</p>
</body>
</html>
